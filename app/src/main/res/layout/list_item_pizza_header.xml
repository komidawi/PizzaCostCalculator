<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/pizza_name_header"
        style="@style/ListItemPizzaHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/pizza_list_name_header"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pizza_size_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pizza_size_header"
        style="@style/ListItemPizzaHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/pizza_list_size_header"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pizza_name_header"
        app:layout_constraintEnd_toStartOf="@+id/pizza_price_header"
        app:layout_constraintStart_toEndOf="@+id/pizza_name_header"
        app:layout_constraintTop_toTopOf="@+id/pizza_name_header" />

    <TextView
        android:id="@+id/pizza_price_header"
        style="@style/ListItemPizzaHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/pizza_list_price_header"
        app:layout_constraintBottom_toBottomOf="@+id/pizza_size_header"
        app:layout_constraintEnd_toStartOf="@+id/pizza_remove_header"
        app:layout_constraintStart_toEndOf="@+id/pizza_size_header"
        app:layout_constraintTop_toTopOf="@+id/pizza_size_header" />

    <TextView
        android:id="@+id/pizza_remove_header"
        style="@style/ListItemPizzaHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pizza_list_remove_header"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pizza_price_header"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>